{
  "name": "root",
  "private": "true",
  "scripts": {
    "fix": "pnpm run format && pnpm run lint",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "syncpack list-mismatches && eslint **/src/**/*.ts --fix",
    "preinstall": "npx only-allow pnpm",
    "release": "release-it --dry-run --verbose",
    "reset": "./scripts/reset.sh",
    "setup": "./setup",
    "typesync": "pnpm exec typesync"
  },
  "peerDependencies": {
    "@utils/eslint-config": "link:utils/eslint-config"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/eslint": "^8.4.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.31",
    "@types/prettier": "^2.6.0",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@utils/eslint-config": "link:utils/eslint-config",
    "benny": "^3.7.1",
    "commitizen": "^4.2.4",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "jest": "^27.5.1",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1",
    "ts-jest": "27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  }
}
