{
  "name": "root",
  "private": "true",
  "scripts": {
    "fix": "pnpm run format && pnpm run lint",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "syncpack list-mismatches && eslint **/src/**/*.ts --fix",
    "preinstall": "npx only-allow pnpm",
    "release": "release-it --dry-run --verbose",
    "reset": "./scripts/reset.sh",
    "setup": "./setup",
    "typesync": "pnpm exec typesync"
  },
  "dependencies": {
    "@utils/eslint-config": "link:utils/eslint-config"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/prettier": "^2.6.0",
    "@types/rimraf": "^3.0.2",
    "@utils/tsconfig": "link:utils/tsconfig",
    "benny": "^3.7.1",
    "commitizen": "^4.2.4",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1",
    "ts-jest": "27.1.4",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  }
}
