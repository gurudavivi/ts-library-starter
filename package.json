{
  "name": "typescript-library-starter",
  "version": "0.0.0",
  "description": "typescript library starter",
  "license": "private",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!*.map"
  ],
  "directories": {
    "test": "test",
    "dist": "dist"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --build --force",
    "commit": "cz",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "postinstall": "typesync",
    "prebuild": "rimraf dist",
    "release": "release-it --config scripts/.release-it.json --verbose --dry-run",
    "reset": "rimraf node_modules && rimraf dist & pnpm install",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm run reset",
    "test": "jest --no-cache --logHeapUsage",
    "test:clear": "jest --clearCache",
    "test:cov": "jest --runInBand --coverage",
    "typedoc": "typedoc --out docs src/index.ts",
    "test:watch": "jest --runInBand --watch",
    "watch": "pnpm run build && tsc --watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.3.1",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.33",
    "@types/rimraf": "^3.0.2",
    "auto-changelog": "^2.4.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "expect-more-jest": "^5.4.0",
    "jest": "^28.1.0",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "syncpack": "^7.2.1",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-toolbelt": "^9.6.0",
    "tslib": "^2.4.0",
    "type-fest": "^2.12.2",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  }
}